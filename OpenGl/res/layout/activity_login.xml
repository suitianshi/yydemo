<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
tools:context=".LoginActivity">

    <TextView
            android:text="用户名："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="138dp" android:id="@+id/textView" android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tb_uid" android:layout_toStartOf="@+id/tb_uid"
            android:layout_marginRight="7dp" android:layout_marginEnd="7dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/tb_uid"
            android:singleLine="true" android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginRight="90dp" android:layout_marginEnd="90dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="room_123"
            android:ems="10"
            android:id="@+id/tb_sid"
            android:singleLine="true"
            android:layout_marginTop="24dp" android:layout_below="@+id/textView" android:layout_alignLeft="@+id/tb_uid"
            android:layout_alignStart="@+id/tb_uid"/>
    <TextView
            android:text="房间号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_alignBaseline="@+id/tb_sid" android:layout_alignBottom="@+id/tb_sid"
            android:layout_alignLeft="@+id/textView" android:layout_alignStart="@+id/textView"/>
    <CheckBox
            android:text="发布视频"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_publish_video"
            android:layout_alignBaseline="@+id/cb_auto_publish" android:layout_alignBottom="@+id/cb_auto_publish"
            android:layout_alignRight="@+id/tb_sid" android:layout_alignEnd="@+id/tb_sid"/>
    <CheckBox
            android:text="自动发布"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_auto_publish"
            android:layout_marginTop="14dp" android:layout_below="@+id/tb_sid"
            android:layout_alignLeft="@+id/tb_sid" android:layout_alignStart="@+id/tb_sid"/>
    <TextView
            android:text="配置项："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_alignBaseline="@+id/cb_auto_publish" android:layout_alignBottom="@+id/cb_auto_publish"
            android:layout_alignLeft="@+id/textView2" android:layout_alignStart="@+id/textView2"/>
    <Button
            android:text="登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:id="@+id/bt_login"
            android:onClick="onLoginClick"
            android:layout_below="@+id/cb_publish_video" android:layout_centerHorizontal="true"/>
</RelativeLayout>