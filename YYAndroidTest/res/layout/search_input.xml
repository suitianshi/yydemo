<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:focusable="true" >

    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_toLeftOf="@+id/btn_enter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_input2"
        android:descendantFocusability="afterDescendants"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <EditText
            android:id="@+id/TxSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="5dp"
            android:focusable="true"
            android:hint="@string/search_channel_live"
            android:lines="1"
            android:maxLength="20"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="@dimen/med_fnt"
            android:textColor="#4D8635"
            android:textColorHint="#c8c8c8" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/clear_input"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignRight="@id/input_container"
        android:layout_alignTop="@id/input_container"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:visibility="gone" >

        <View
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_clear" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/btn_enter"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@id/input_container"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_gravity="right|center"
        android:src="@drawable/btn_enter_channel"
        android:visibility="gone" />
    
    <View
        android:id="@+id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/input_container"
        android:background="@drawable/list_divider"
        android:visibility="invisible" />

</RelativeLayout>
