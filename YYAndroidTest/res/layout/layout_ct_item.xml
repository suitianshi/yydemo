<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_item"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_category_normal"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/rl_channeltree_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="6dp">


        <TextView
                    android:id="@+id/TxChannelTreeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/channel_online"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#C8D2DD"
                    android:textSize="13sp"
                    />			
        <TextView
                android:id="@+id/TxChannelTreeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="#555555"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/TxChannelTreeCount"
                android:visibility="visible"/>

        
    </RelativeLayout>

    <View
            android:id="@+id/ct_spliter"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/list_divider"
            />
</LinearLayout>
